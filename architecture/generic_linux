### Define C++ compiler and flags for different machines

### C++ Compiler:
export CXX = mpicxx


### Compiler Flags:
# For debugging:
#export CXXFLAGS = -O0 -Wall -std=c++11 -g -DDEBUG -D_DEBUG
# For production:
export CXXFLAGS = -O3 -Wall -W -Wconversion -Wshadow -Wcast-qual -Wwrite-strings -std=c++11


### Linking flags are compiler dependent
### For GNU compiler:
export LINKFLAGS = -lstdc++

### For Intel compiler:
#export LINKFLAGS = -cxxlib
